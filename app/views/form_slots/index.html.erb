<link rel="stylesheet" href="https://www.jquery-az.com/boots/css/bootstrap-multiselect/bootstrap-multiselect.css" type="text/css">
        <script type="text/javascript" src="https://www.jquery-az.com/boots/js/bootstrap-multiselect/bootstrap-multiselect.js"></script>

<nav aria-label="breadcrumb" class="">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Admintrator</a></li>
    <li class="breadcrumb-item active">User Management</li>
  </ol>
</nav>

<div class="container-fluid">
<div class="row" style="background-color: #8da8db; height: 40px; line-height: 40px; margin: 0px 0px 0px 0px; color: white; ">
  <div class="col-md-3" >
    CDS Reviewer for 
  </div>
  <div class="col-md-2">
    Search
  </div>
  <div class="col-md-2 filter-slots">
  Filter
    <select id="filter-form-slots" multiple="multiple">
      <option value="1" >Passed slots in previous periods</option>
      <option value="2">Failed slots in previous periods</option>
      <option value="3">No Assessments</option>
      <option value="4">Need to update evidences</option>
      <option value="5">Assessing in the current period</option>
      <option value="6">Planned</option>
    </select>
  </div>
  <div class="col-md-2">
    Reviewer Result
  </div>
  <div class="col-md-1">
    Submit
  </div>
  <div class="col-md-1">
    Approve
  </div>
  <div class="col-md-1">
    Cancel
  </div>
</div>
</div>

<div class="container-fluid">
    <div class="row" id="body-row">
      <%= render 'left_panel'%>
    
      <div class="col" style="padding-right: 0px">
        <%= render 'form_slot'%>
      </div>

    </div>
</div>

<%= render 'modal_submit_cds'%>
<%= render 'modal_delete_cds'%>

