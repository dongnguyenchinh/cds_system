<!-- The Modal -->

  <div class="modal fade modal-add-more-evidence" id="modal_add_more_evidence">
    <div class="modal-dialog modal-xl">
      <div class="modal-content">
        <!-- Modal Header -->
        <div class="modal-header head-myheader">
          <h4 class="modal-title " style="text-align: center">Add More Evidence</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
               <p style="color:red; display:inline">* </p> Required fields
              </div>
              <div class="col-12">
                <table class="table table-primary table-mytable table-view-assessment-history">
                  <tr>
                    <td scope="col" style="width:20%">Competency:</td>
                    <td scope="col" style="width:80%" id="add_more_evidence_competency_name"></td>
                  </tr>
                  <tr>
                    <td>Slot ID:</td>
                    <td id="add_more_evidence_slot_id"></td>
                  </tr>
                  <tr>
                    <td>Slot Desscription:</td>
                    <td id="add_more_evidence_slot_desc"></td>
                  </tr>
                  <tr>
                    <td>Evidence Guideline:</td>
                    <td id="add_more_evidence_evidence_guildeline"></td>
                  </tr>
                  <tr>
                    <td>Reviewer/Approver Name:</td>
                    <td id="add_more_evidence_reviewer"></td>
                  </tr>
                  <tr>
                    <td>Out:</td>
                    <td id="add_more_evidence_out"></td>
                  </tr>
                  <tr style="height: 150px">
                    <td>Recommendation:</td>
                    <td id="add_more_evidence_recommends"></td>
                  </tr>
                  <tr>
                    <td>Staff Commit (*):</td>
                    <td id="add_more_evidence_commit">   
                      <select class="commit-select" >
                        <option value="1">Commit</option>
                        <option value="0">Uncommit</option>
                      </select>
                    </td>
                  </tr>
                  <tr>
                    <td>Staff Sefl-assessment(*):</td>
                    <td id="add_more_evidence_self_assessment">  
                      <select class="point-select"  >
                        <option value="5" >5 - Outstanding</option>
                        <option value="4" >4 - Exceeds Expectations</option>
                        <option value="3" >3 - Meets Expectations</option>
                        <option value="2" >2 - Needs Improvement</option>
                        <option value="1" >1 - Does Not Meet Minimun Standards</option>
                      </select>
                    </td>
                    <input type="hidden" value="1" id="add_more_evidence_id">
                  </tr>
                  <tr>
                    <td>Staff Evidence(*):</td>
                    <td><textarea style="width:100%; height:100%; min-height:60px"class="evidence autoresizing" id="add_more_evidence_evidence"></textarea></td>
                  </tr>
                        
                </table>
                  
              </div>
              
            </div>
          </div>
          <% # end container %>
        </div>
        <!-- Modal footer -->

      
        <div class="modal-footer" style="justify-content: center;">
          <button id="btn_save" type="button" class="btn btn-primary" data-dismiss="modal">Save</button>
          <button type="button" class="btn btn-light border-dark" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

