<!-- The Modal -->
<div class="modal fade modal-form-add-user" id="modalEdit">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <!-- Modal Header -->
      <div class="modal-header head-myheader">
        <h4 class="modal-title" style="text-align: center">Edit User Infomation</h4>
      </div>
      <% unless @user.nil? %>
        <% @user.each do |u|%>
          <!-- Modal body -->
          <div class="modal-body">
            <div class="container-fluid">
              <div class="row">
                <div class="col-sm-12">
                  <p style="color:red">Note: * indicates required fileld</p>
                </div>
                <div class="col-sm-6">
                  <%# first name %>
                  <div class="row">
                    <div class="col-sm-3">
                      <label>First Name (*)</label>
                    </div>
                    <div class="col-sm-9">
                      <%= text_field_tag 'first', u.first_name , class: 'form-control edit-first', placeholder: 'Please enter first name' %>
                    </div>
                  </div>
                  <br>
                  <%# last name %>
                  <div class="row">
                    <div class="col-sm-3">
                      <label>Last Name (*)</label>
                    </div>
                    <div class="col-sm-9">
                      <%= text_field_tag 'last', u.last_name, class: 'form-control edit-last', placeholder: 'Please enter last name' %>
                    </div>
                  </div>
                  <br>
                  <%# email %>
                  <div class="row">
                    <div class="col-sm-3">
                      <label>Email (*)</label>
                    </div>
                    <div class="col-sm-9">
                      <%= text_field_tag 'email', u.email, class: 'form-control edit-email', placeholder: 'Please enter email' %>
                    </div>
                  </div>
                  <br>
                  <%# account %>
                  <div class="row">
                    <div class="col-sm-3">
                      <label>Account (*)</label>
                    </div>
                    <div class="col-sm-9">
                      <%= text_field_tag 'account', u.account, class: 'form-control edit-account', placeholder: 'Please enter account' %>
                    </div>
                  </div>
                  <br>
                </div>
                <%# right  %>
                <div class="col-sm-6">
                  <%# role %>
                  <div class="row">
                    <div class="col-sm-3">
                      <label>Role (*)</label>
                    </div>
                    <div class="col-sm-9">
                      <%= select_tag "role", options_from_collection_for_select(@roles, "id", "name",u.role_id), class: 'form-control edit-role', include_blank: "Select a role" %>
                    </div>
                  </div>
                  <br>
                  <%# company %>
                  <div class="row">
                    <div class="col-sm-3">
                      <label>Company (*)</label>
                    </div>
                    <div class="col-sm-9">
                      <%= select_tag "company", options_from_collection_for_select(@companies, "id", "name",u.company_id), class: 'form-control modal-edit-user-management edit-company',  include_blank: "Select a company" %>
                    </div>
                  </div>
                  <br>
                  <%# project %>
                  <div class="row">
                    <div class="col-sm-3">
                      <label>Project</label>
                    </div>
                    <div class="col-sm-9">
                      <% arr_id_project = [] %>
                      <% @project_user.each {|x| arr_id_project << x.id } %>
                      <%= select_tag 'project', options_from_collection_for_select(@project_user, "id", "desc",arr_id_project), class: "tokenize-project edit-project", multiple: true %>
                    </div>
                  </div>
                  <br>
                  <%# end  %>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-5"></div>
                <div class="col-sm-2">
                  <button type="button" class="btn btn-primary" id="btn-modal-edit-user">Save</button>
                  <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
            <%# end container  %>
          </div>
        <% end %>
      <% end %>
      <!-- Modal footer -->
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
