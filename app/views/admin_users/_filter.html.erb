<div class="filter-page-user">
  <div class="title-filter-user">Filter</div>
  <div class="form-group">
    <label>Company</label>
    <%# company %>
    <select class="form-control" id="filter-company" name="company">
      <option value='all'>All</option>
      <% companies.each do |c| %>
        <option value="<%= c.id%>"><%= c.name%></option>
      <% end%>
    </select>
  </div>
  <div class="form-group">
    <label>Project</label>
    <%# project %>
    <select class="form-control" id="filter-project" name="project">
      <option value='all'>All</option>
      <% projects.each do |p| %>
        <option value="<%= p.id%>"><%= p.desc%></option>
      <% end%>
      <option value='none'>None</option>
    </select>
  </div>
  <div class="form-group">
    <label>Role</label>
    <%# project %>
    <select class="form-control" id="filter-role" name="role">
      <option value='all'>All</option>
      <% roles.each do |r| %>
        <option value="<%= r.id%>"><%= r.name%></option>
      <% end%>
    </select>
  </div>
  <div class="form-group">
    <div class="row ">
      <div class="col-sm-12 justify-content-center">
        <button type="button" class="btn btn-primary"style="float:left;margin-left:10%" id="btn-filter">Apply</button>
        <button type="button" class="btn btn-danger" style="margin-left:5%"id="btn-reset">Reset</button>
      </div>
    </div>
  </div>
</div>
