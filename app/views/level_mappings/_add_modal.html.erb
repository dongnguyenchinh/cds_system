<!-- The Modal -->
<div class="modal fade" id="addModal">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <!-- Modal Header -->
      <div class="modal-header head-myheader" style="height:50px">
        <h4 class="modal-title" style="text-align: center">Select a Role</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <!-- Modal body -->
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row">
            <div class="col-sm-12">
              <p>Please select a role for new level mapping</p>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-4">
              Role:
            </div>
            <div class="col-sm-8">
              <select id="role_select" name="role">
              </select>
            </div>
          </div>
          <div class="" style="text-align:center">
          </div>
        </div>
        <!-- Modal footer -->
        <div class="modal-footer" style="justify-content: center;border-top:0px;">
          <!-- hidden input to contains id-->
          <input type="text" class="delete_id" style="display:none;" name="delete_id"/>
          <button type="button" class="btn btn-primary" id="btn-modal-add" onclick="go_to_add_page();">Okay</button>
          <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
        </div>
      </div>
    </div>
  </div>
