<div class="modal-header">
  <h4 class="modal-title" style="text-align: center">Edit schedule</h4>
</div>
<div class="modal-body">
  <div class="container-fluid">
    <form id="form_edit_hr">
      <div class="row">
        <div class="col-sm-12">
          <p style="color:red">Note: * indicates required fileld</p>
        </div>
        <div class="col-sm-12">
          <%# Schedule name %>
          <div class="row">
            <div class="col-sm-4">
              <label>Schedule Name (*)</label>
            </div>
            <div class="col-sm-6">
              <%= text_field_tag 'desc', nil, class: 'form-control', value: schedule.desc %>
              <input type="hidden" name="schedule" id="schedule" value="schedule">
              <input type="hidden" name="user" id="user" value="<%= current_admin_user.id %>">
            </div>
          </div>
          <br>
          <%# project name %>
          <div class="row">
            <div class="col-sm-4">
              <label>Company Name (*)</label>
            </div>
            <div class="col-sm-6">
              <%= select_tag "company", options_from_collection_for_select(@company, "id", "name", schedule.company.id), class: 'form-control'%>
            </div>
          </div>
          <br>
          <%# start date %>
          <div class="row">
            <div class="col-sm-4">
              <label>Start date (*)</label>
            </div>
            <div class="col-sm-6">
              <input type="text" id="start_date_edit" class="form-control" value="<%= schedule.start_date %>">
            </div>
          </div>
          <br>
          <%# end date employee %>
          <div class="row">
            <div class="col-sm-4">
              <label>End date (*)</label>
            </div>
            <div class="col-sm-6">
              <input type="text" id="end_date_edit" class="form-control" value="<%= schedule.end_date_hr %>">
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-sm-4">
              <label>Reminder (*)</label>
            </div>
            <div class="col-sm-6">
              <%= number_field_tag :notify_hr, nil %>
              <em>day(s) before</em>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-sm-4">
              <label>Status</label>
            </div>
            <div class="col-sm-6" >
              <input type="text" class="form-control" id="status" value="<%= schedule.status %>" disabled >
            </div>
          </div>
          <br>
        </div>
        <%# right  %>
      </div>
      <%# end container  %>
    </div>
    <div class="modal-footer justify-content-center">
      <button type="button" class="btn btn-primary" id="btn_modal_add_hr">Save</button>
      <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
    </div>
  </form>
</div>
