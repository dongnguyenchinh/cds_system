<button type="button" class="btn btn-primary float-right" data-toggle="modal" data-target="#modalAdd" style="margin: 5px 15px 5px 0px;">Add</button>
<div class="modal fade modal-form-add" id="modalAdd" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add a New Schedule</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="form_add_schedule">
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Project name:</label>
            <%= select_tag "project", options_from_collection_for_select(@projects, "id", "desc"), class: 'form-control',  include_blank: "Select a project" %>
          </div>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label"> Start date:</label>
            <%= text_field_tag 'start_date', nil, class: 'form-control date_picker1',placeholder: 'Please enter start date' %>
            <input type="hidden" id="start_date_1" name="custId" value="3487">
          </div>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">End date	:</label>
            <%= text_field_tag 'end_date', nil, class: 'form-control date_picker2', placeholder: 'Please enter end date' %>
            <input type="hidden" id="end_date_1" name="custId" value="3487">
          </div>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Notify before end date:</label>
            <%= text_field_tag 'notify_date', nil, class: 'form-control',type:'number', placeholder: 'Please enter notify_date' %>
          </div>
        </form>
      </div>
      <div class="modal-footer justify-content-center">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="btn_modal_add">Save</button>
      </div>
    </div>
  </div>
</div>
<script>
  $('#start_date').datetimepicker({ footer: true, modal: true });
                $('#end_date').datetimepicker({ footer: true, modal: true });
</script>
