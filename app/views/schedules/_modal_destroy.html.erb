<div class="modal fade modal-form-add" id="modalDeleteSchedule" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header head-myheader">
        <h5 class="modal-title" id="exampleModalLabel">Confirm Delete Schedule</h5>
        <button type="button" class="close close-modal" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure to delete this schedule?</p>
        <%= text_field_tag 'schedule_id', "",type: 'hidden', class: 'form-control' %>
      </div>
      <div class="modal-footer justify-content-center">
        <button type="button" class="btn btn-primary" id="btn_modal_delete" onclick="delete_schedule();">Yes</button>
        <button type="button" class="btn btn-light border-dark" data-dismiss="modal">No</button>
      </div>
    </div>
  </div>
</div>
