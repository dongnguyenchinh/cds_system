<%= javascript_include_tag 'schedules', 'data-turbolinks-track': 'reload' %>
  <%= render 'add'%>
<%= render 'delete_selected'%>
 
  <!-- Modal show -->
  <div id="modal_content" >
    <div class="modal fade modal-form-add" id="modal_edit" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
      </div>
    </div>
  </div>
  <div id="modal_content" class="modal_content_2">
    <div class="modal fade modal-form-add" id="modal_destroy" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
      </div>
    </div>
  </div>
  <!-- end modal -->
  <table class="table" id="users-datatable">
    <thead>
      <tr>
        <th data-sort-ignore="true"><input type="checkbox" id="selectAll"></th>
        <th>ID</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Project name</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Notify before end date</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody id="schedules">
      <%= render  @schedules %>
    </tbody>
  </table>

<div id="paginator" class="float-right">
  <%= paginate(@schedules) %>
</div>
<div id="alert-success" class="alert alert-success" data-alert="alert"><span id="content-alert-success"></span> Success !</div>
<div id="alert-danger" class="alert alert-danger" data-alert="alert"><span id="content-alert-fail"></span> Fail !</div>