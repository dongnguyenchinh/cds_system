 <input type="hidden" value="<%= @privilege_array.include? 4%>" class="get_privilege">
<div class="title_bar" id="title_bar">
        <div id="titlebar_left">
          <h2 id="page_title">User Group Managment</h2>
        </div>
        <div id="titlebar_right">
          <div class="action_items"></div>
        </div>
      </div>

<!-- Modal show -->
<div id="modal_content" class="modal_destroy">
  <div class="modal fade modal-form-add" id="modal_destroy" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="container-fluid">
    <!-- Control the column width, and how they should appear on different devices -->
    <div class="row">
      <div class="col-sm-12">
    
      <% if @privilege_array.include? 4%>
        <%= render 'add'  %>
        <%= render 'delete_selected'%>
        <%= render 'edit'  %>
        <%= render 'assign_user'  %>
        <%= render 'privilege'%>   
        <%end%>
      </div>
      <div class="col-sm-12">
        <div class="col-sm-12 table_group_wrapper">
          <!-- table -->
                <%= render partial: 'groups', locals: {groups: @groups} %>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-2">
            </div>
            <div class="col-sm-10">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<div id="alert-success" class="alert alert-success" data-alert="alert"><span id="content-alert-success"></span></div>
<div id="alert-danger" class="alert alert-danger" data-alert="alert"><span id="content-alert-fail"></span></div>
