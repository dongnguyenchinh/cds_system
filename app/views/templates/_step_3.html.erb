<%= stylesheet_link_tag 'table_template', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'table_template', 'data-turbolinks-track': 'reload' %>
<div class="row"  style="justify-content: center;">
    <div class="col-lg-6">
        <%= form_with class: "step3 form-add-template" do %>
        <div class="row">
        <div class="col-sm-12">
            <div class="col-sm-8" style="text-align: left">
            <p style="color:red;">Note: * indicates required fileld</p>
            </div>
        </div>
        <div class="col-sm-12">
            <%# Choose competency %>
            <div class="row">
            <div class="offset-md-1 col-md-2" style="text-align: left">
                <label>Competency: </label>
            </div>
            <div class="col-sm-8">
                <%= select_tag "type", options_from_collection_for_select(competencies, :id, :name), class: 'form-control', id: "selectCompetency" %>
            </div>
            </div>
            <br>
            <%# Level %>
            <div class="row">
            <div class="offset-md-1 col-md-2" style="text-align: left">
                <label>Level</label>
            </div>
            <div class="col-sm-8">
                <%= select_tag "type", raw('<option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>'), class: 'form-control' %>
            </div>
            </div>
            <br>
            <div class="row">
                <div class="offset-md-1 col-md-2" style="text-align: left">
                    <label>Slot ID (*)</label>
                </div>
                <div class="col-sm-8">
                    <%= text_field_tag 'name', nil, class: 'form-control', placeholder: 'Please Enter Slot ID (LevelSlot. Ex: 1a, 1b, 1c, ...)' %>
                </div>
            </div>
            <br>
            <%# Evidence Guide %>
            <div class="row">
            <div class="offset-md-1 col-md-2" style="text-align: left">
                <label>Slot Description(*)</label>
            </div>
            <div class="col-sm-8">
                <%= text_area_tag 'desc', nil, rows: 5, style: 'width:100%;', class: 'form-control', placeholder: "Please Enter Slot Description" %>
                <div class="error">Max character: 500</div>
            </div>
            </div>  
            <br>
            <%# Description %>
            <div class="row">
            <div class="offset-md-1 col-md-2" style="text-align: left">
                <label>Evidence Guide (*)</label>
            </div>
            <div class="col-sm-8">
                <%= text_area_tag 'desc', nil, rows: 5, style: 'width:100%;', class: 'form-control', placeholder: "Please Enter Slot Evidence" %>
                <div class="error">Max character: 1000</div>
            </div>
            </div>  
            <br>
        </div>
        </div>
        <% end %>
    </div>
</div>

