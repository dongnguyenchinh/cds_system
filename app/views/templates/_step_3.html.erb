<div class="row"  style="justify-content: center;">
    <div class="col-lg-6">
        <%= form_with class: "step3 form-add-template" do %>
        <div class="row">
        <div class="col-sm-12">
            <div class="col-sm-8" style="text-align: left">
            <p style="color:red;">(*) required fields</p>
            <p id="hideIdSlot" style="display:none"></p>
            </div>
        </div>
        <div class="col-sm-12">
            <%# Choose competency %>
            <div class="row">
            <div class="offset-md-1 col-md-2" style="text-align: left">
                <label>Competency: </label>
            </div>
            <div class="col-sm-8">
                <select class="form-control" onchange= "checkDataDesc()" id= "selectCompetency">
                </select>
            </div>
            </div>
            <br>
            <%# Level %>
            <div class="row">
            <div class="offset-md-1 col-md-2" style="text-align: left">
                <label>Level</label>
            </div>
            <div class="col-sm-8">
                <%= select_tag "type", raw('<option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>'),onchange: "checkDataDesc()", class: 'form-control', id: "selectLevel" %>
            </div>
            </div>
            <br/>
            <%# Evidence Guide %>
            <div class="row">
                <div class="offset-md-1 col-md-2" style="text-align: left">
                    <label>Slot Description(*)</label>
                </div>
                <div class="col-sm-8">
                    <%= text_area_tag 'Slotdesc', nil, rows: 5, style: 'width:100%;',onkeyup: "checkDataDesc()", class: 'form-control', placeholder: "Please Enter Slot Description", id: "descSlot" %>
                    <small id="ErrorDesc" class="text-danger error" style="display:none">Please enter slot description!</small>    
                </div>
            </div>  
            <br>
            <%# Description %>
            <div class="row">
            <div class="offset-md-1 col-md-2" style="text-align: left">
                <label>Evidence Guide</label>
            </div>
            <div class="col-sm-8">
                <%= text_area_tag 'evidence', nil, rows: 5, style: 'width:100%;',onkeyup: "checkDataDesc()", class: 'form-control', placeholder: "Please Enter Slot Evidence", id: "evidenceSlot" %>
            </div>
            </div>  
            <br>
        </div>
        </div>
        <% end %>
    </div>
</div>

<button class="btn btn-light border-primary previous action-button-previous" title="Back to step 2" type="button" name="previous">Back</button>
<button type="buttton" class="btn btn-primary" title="Save Slot" id="addSlot">Save</button>
<button class="btn btn-primary action-button" type="button" id="btnFinish" title="Enable Template" >Finish</button>
<button type="button" class="btn btn-light border-primary" data-toggle="modal" title="Close and Go to Template page" data-target="#modal_warning_close">Close</button>

<hr/>

<div class="row divHeader">
    <div class="col-8">
        <div id="nameCompetency" style=""></div>
    </div>
    <div class="col-4">
        <div class="input-group mb-3 divHeader">
            <div class="input-group-prepend">
                <span class="input-group-text">Search : </span>
            </div>
            <input type="search" id="txtSearch" class="form-control" placeholder="Search by slot's description">
        </div>
    </div>
</div>
<div class="row divTable">
    <div class="col-lg-12">
        <table class="table table-primary table-responsive-sm table-mytable" id="table_slot">
            <thead>
                <tr>
                    <th>  Level <%= image_tag("sort_both.png", border: 1) %></th>
                    <th data-orderable="false">&nbsp;&nbsp;&nbsp;&nbsp;Slot Description&nbsp;&nbsp;&nbsp;&nbsp;</th>
                    <th data-orderable="false">Evidence Guide</th>
                    <th data-orderable="false">Action</th>
                </tr>
            </thead>
            <tbody id="tbdTemplate">
            </tbody>
        </table>
    </div>
</div>
<!-- The Finish Alert Modal -->
<div class="modal fade" id="messageQuestionEnable">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header head-myheader">
                <h4 class="modal-title">Confirm to Finish Add Template</h4>
                <button type="button" style="color:white" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body divcontent" id="contentQuestionEnable">
                Are you want to Enable this template?
            </div>
            <!-- Modal footer -->
            <div class="modal-footer" style="justify-content: center;">
                <button id="btnEnable" type="button" class="btn btn-primary">Yes</button>
                <button type="button" class="btn btn-light border-dark close_modal" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>
<!-- The Delete Alert Modal -->
<div class="modal fade" id="messageDelete">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header head-myheader">
                <h4 class="modal-title">Confirm Delete Slot</h4>
                <button type="button" style="color:white" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body divcontent" id="contentMessageDelete">
                Are you sure you want to delete the slot 
            </div>
            <!-- Modal footer -->
            <div class="modal-footer" style="justify-content: center;">
                <button id="btnDelete" type="button" class="btn btn-primary">Yes</button>
                <button type="button" class="btn btn-light border-dark close_modal" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>
<!-- The Delete Alert Modal -->
<div class="modal fade" id="messageMove">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header head-myheader">
                <h4 class="modal-title" style="color:white">Warning!</h4>
                <button type="button" style="color:white" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body divcontent" id="contentMessageMove">
                <%# ajax %>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer divTable header-myheader">
                    <button type="button" class="btn btn-primary close_modal" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>
<!-- The Enable Alert Modal -->
<div class="modal fade" id="messageEnable">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header head-myheader">
                <h4 class="modal-title" style="color:white">Notification</h4>
                <button type="button" style="color:white" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body divcontent" id="contentMessageEnable">
                <%# ajax %>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer divTable header-myheader">
                    <button type="button" class="btn btn-primary close_modal" id="btnMessageEnable" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>