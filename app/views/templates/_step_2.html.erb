<div class="row"  style="justify-content: center;">
  <div class="col-lg-6">
    <%= form_with class: "form-add-competency" do %>
      <div class="row">
        <div class="col-sm-12">
          <p style="color:red; text-align: left">(*) required fields</p>
        </div>
        <div class="col-sm-12">
          <%# group name %>
          <div class="row">
            <div class="col-md-2" style="text-align: left">
              <label>Name (*)</label>
            </div>
            <div class="col-sm-10">
              <%= text_field_tag 'name', nil, class: 'form-control border-primary', placeholder: 'Please enter competency name' %>
              <%= hidden_field(:competency, :id )%>
              <%= hidden_field(:competency, :index )%>
              <div id="error-name-competency">
                <span class="error"></span>
              </div>
            </div>
          </div>
          <br>
          <%# status %>
          <div class="row">
            <div class="col-md-2" style="text-align: left">
              <label>Type</label>
            </div>
            <div class="col-sm">
              <%= select_tag "type", options_for_select([['General','General'], ['Specialized', 'Specialized']], 'General'), class: 'form-control border-primary' %>
            </div>
          </div>
          <br>
          <%# Description %>
          <div class="row">
            <div class="col-md-2" style="text-align: left">
              <label>Description</label>
            </div>
            <div class="col-sm-10">
              <%= text_area_tag 'desc', nil, rows: 5, style: 'width:100%;', class: 'form-control border-primary'  %>
              <div id="error-desc-competency">
                <span class="error"></span>
              </div>
            </div>
          </div>
          <br>
        </div>
      </div>
    <% end %>
  </div>
</div>
<button class="btn btn-light border-primary step2 previous action-button-previous" data-toggle="tooltip" type="button" name="previous">Back</button>
<button type="buttton" class="btn btn-secondary btn-save-competency" data-toggle="tooltip" disabled id="btn-add-competency">Save</button>
<button class="btn btn-primary next action-button btn-next-competency nexttoStep3" data-toggle="tooltip" type="button" value="Next Step" name="next">Next</button>
<button type="button" class="btn btn-light border-primary" id = "CancelStep2">Cancel</button>
<%= render 'delete_competency' %>
<div style="margin-top: 20px" style="justify-content: left;">
  <div class="row">
    <div class="col-sm">
      <div class="divHeader" style="padding:1% 0px 1% 1.5%">Competency List</div>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <table class="table table-primary table-responsive-sm table-mytable" id="table_add_competency">
        <thead>
          <tr>
            <th data-orderable="false" data-width="20%">No.</th>
            <th data-orderable="false" data-width="20%">Competency Name</th>
            <th data-orderable="false" data-width="20%">Type</th>
            <th data-orderable="false" data-width="20%">Description</th>
            <th data-orderable="false" data-width="20%">Action</th>
          </tr>
        </thead>
        <tbody id="tbdTemplate">
        </tbody>
      </table>
    </div>
  </div>
</div>
