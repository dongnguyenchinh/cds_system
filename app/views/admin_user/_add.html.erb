<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
    Add
  </button>

  <!-- The Modal -->
  <div class="modal fade" id="myModal">
    <div class="modal-dialog modal-xl">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title" style="text-align: center">Add User Infomation</h4>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
          <div class="container-fluid">
            <div class="row">
              <div class="col-sm-12">
                <p style="color:red">Note: * indicates required fileld</p>
              </div>
              <div class="col-sm-6">
              <%# first name %>
                <div class="row">
                  <div class="col-sm-3">
                    <label>First Name (*)</label>
                  </div>
                  <div class="col-sm-9">
                    <%= text_field_tag 'first', nil, class: 'form-control' %>
                  </div>
                </div>
                <br>
              <%# last name %>
                <div class="row">
                  <div class="col-sm-3">
                    <label>Last Name (*)</label>
                  </div>
                  <div class="col-sm-9">
                    <%= text_field_tag 'last', nil, class: 'form-control' %>
                  </div>
                </div>
                <br>
              <%# email %>
                <div class="row">
                  <div class="col-sm-3">
                    <label>Email (*)</label>
                  </div>
                  <div class="col-sm-9">
                    <%= text_field_tag 'email', nil, class: 'form-control' %>
                  </div>
                </div>
                <br>
              <%# account %>
                <div class="row">
                  <div class="col-sm-3">
                    <label>Account (*)</label>
                  </div>
                  <div class="col-sm-9">
                    <%= text_field_tag 'account', nil, class: 'form-control' %>
                  </div>
                </div>
                <br>
              </div>
              
              <%# right  %>
              <div class="col-sm-6">
                <%# role %>
                <div class="row">
                  <div class="col-sm-3">
                    <label>Role (*)</label>
                  </div>
                  <div class="col-sm-9">
                    <%= select_tag "role", options_from_collection_for_select(roles, "id", "name"), class: 'form-control', include_blank: "Select a role" %>
                  </div>
                </div>
                <br>
                <%# company %>
                <div class="row">
                  <div class="col-sm-3">
                    <label>Company (*)</label>
                  </div>
                  <div class="col-sm-9">
                    <%= select_tag "company", options_from_collection_for_select(companies, "id", "name"), class: 'form-control modal-add-user-management',  include_blank: "Select a company" %>
                  </div>
                </div>
                <br>
                <%# project %>
                <div class="row">
                  <div class="col-sm-3">
                    <label>Project</label>
                  </div>
                  <div class="col-sm-9">
                    <%= select_tag 'project', raw("<option></option>"), class: "tokenize-project", multiple: true %>
                  </div>
                </div>
                <br>
                <%# end  %>
              </div>
            </div>

            <div class="row">
            <div class="col-sm-5"></div>
              <div class="col-sm-2">
                <button type="button" class="btn btn-primary" id="btn-modal-add-user">Submit</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
          <%# end container  %>
          
            
        </div>
        
        <!-- Modal footer -->
        <div class="modal-footer">
          
        </div>
        
      </div>
    </div>
  </div>

  <script>
  $(document).ready(function () {
    $("#btn-modal-add-user").click(function() {
      var first_name = $('#first').val();
      var last_name = $('#last').val();
      var email = $('#email').val();
      var account = $('#account').val();
      var role = $('#role').val();
      var company = $('#company').val();
      temp = true
      $(".error").remove();
      if (first_name.length < 1) {
        $('#first').after('<span class="error">Please enter a valid first name</span>');
        temp = false 
      }
      if (last_name.length < 1) {
        $('#last').after('<span class="error">Please enter a valid last name</span>');
        temp = false 
      }
      if (email.length < 1) {
        $('#email').after('<span class="error">Please enter a valid email</span>');
        temp = false 
      } 
      if (account.length < 1) {
        $('#account').after('<span class="error">Please enter a valid account</span>');
        temp = false 
      }""
      if (role == "") {
        $('#role').after('<span class="error">Please enter a valid role</span>');
        temp = false 
      }
      if (company == "") {
        $('#company').after('<span class="error">Please enter a valid company</span>');
        temp = false 
      }

    });
  });
  $(".tokenize-project").tokenize2();

  


  </script>

<style>
  .error {
    color: red;
  }
</style>