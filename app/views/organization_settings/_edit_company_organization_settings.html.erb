<div id="box_company" class="row">
  <input class="company-id form-control" type="text" disabled style="display: none;" />
  <div class="row">
    <label class="col-2">Company name(*):</label>
    <div class="message-company-name col-4">
      <input type="text" class="company-name form-control" />
    </div>
    <label class="col-2">CEO(*):</label>
    <div class="message-company-ceo col-4">
      <input type="text form-control" class="company-ceo form-control" />
    </div>
  </div>
  <div class="row">
    <label class="col-2">Abbreviation:</label>
    <div class="message-company-abbreviation col-4">
      <input type="text" class="company-abbreviation form-control" />
    </div>
    <label class="col-2">Parent company:</label>
    <div class="message-company-parent-company-id col-4">
      <select class="company-parent-company-id form-control"></select>
    </div>
  </div>
  <div class="row">
    <label class="col-2">Establishment(*):</label>
    <div class="message-company-establishment col-4">
      <input type="text" class="company-establishment form-control joined-date" />
    </div>
    <label class="col-2">No. of employeest:</label>
    <div class="message-company-quantity col-4">
      <input type="text" class="company-quantity form-control" disabled style="background-color: rgb(239, 239, 239);" />
    </div>
  </div>
  <div class="row">
    <label class="col-2">Phone(*):</label>
    <div class="message-company-phone col-4">
      <input type="text" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');" class="company-phone form-control" />
    </div>
    <label class="col-2">Email Staff:</label>
    <div class="message-company-email-group-staff col-4">
      <input type="text" class="company-email-group-staff form-control" />
    </div>
  </div>
  <div class="row">
    <label class="col-2">Fax:</label>
    <div class="message-company-fax col-4">
      <input type="text" class="company-fax form-control" />
    </div>
    <label class="col-2">Email HR:</label>
    <div class="message-company-email-group-hr col-4">
      <input type="text" class="company-email-group-hr form-control" />
    </div>
  </div>
  <div class="row">
    <label class="col-2">Email(*):</label>
    <div class="message-company-email col-4">
      <input type="text" class="company-email form-control" />
    </div>
    <label class="col-2">Email FA:</label>
    <div class="message-company-email-group-fa col-4">
      <input type="text" class="company-email-group-fa form-control" />
    </div>
  </div>
  <div class="row">
    <label class="col-2">Tax Code:</label>
    <div class="message-company-tax-code col-4">
      <input type="text" class="company-tax-code form-control" />
    </div>
    <label class="col-2">Email IT:</label>
    <div class="message-company-email-group-it col-4">
      <input type="text" class="company-email-group-it form-control" />
    </div>
  </div>
  <div class="row">
    <label class="col-2">Website:</label>
    <div class="message-company-website col-4">
      <input type="text" class="company-website form-control" />
    </div>
    <label class="col-2">Email Admin:</label>
    <div class="message-company-email-group-admin col-4">
      <input type="text" class="company-email-group-admin form-control" />
    </div>
  </div>
  <div class="row">
    <label class="col-2">Description:</label>
    <div class="message-company-desc col-4">
      <textarea class="company-desc form-control"></textarea>
    </div>
    <label class="col-2">Address(*):</label>
    <div class="message-company-address col-4">
      <textarea class="company-address form-control"></textarea>
    </div>
  </div>
  <div class="row">
    <label class="col-2">Note:</label>
    <div class="message-company-note col-4">
      <textarea class="company-note form-control"></textarea>
    </div>
  </div>
</div>
