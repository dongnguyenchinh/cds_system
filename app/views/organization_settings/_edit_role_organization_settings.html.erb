<div id="box_role" class="row" style="display: none;">
  <input class="role-id form-control" type="text" disabled style="display: none;" />
  <div class="row">
    <label class="col-2">Role Name(*):</label>
    <div class="col-4">
      <input type="text" class="role-name form-control" />
    </div>
    <label class="col-2">Abbreviation:</label>
    <div class="col-4">
      <input type="text" class="role-abbreviation form-control" />
    </div>
  </div>
  <div class="row">
    <label class="col-2">Description:</label>
    <div class="col-4">
      <textarea class="role-desc form-control"></textarea>
    </div>
    <label class="col-2">Note:</label>
    <div class="col-4">
      <textarea class="role-note form-control"></textarea>
    </div>
  </div>
</div>