<!-- The Modal -->
<div class="modal fade modal-form-add-user" id="modal_edit_contact">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <!-- Modal Header -->
      <div class="modal-header head-myheader">
        <h4 class="modal-title" style="text-align: center">Edit Your Profile</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <!-- Modal body -->
        <input type="hidden" value="<%= @user.id %>" id="user_id">
        <div class="modal-body">
          <div class="container-fluid">
            <div class="row">
              <div class="col-sm-12">
                <p style="color:red">(*) required fields</p>
              </div>
              <div class="col-sm-12">
                <div class="row">
                  <div class="col-sm-3">
                    <label>First Name (*)</label>
                  </div>
                  <div class="col-sm-9">
                    <input type="text" maxlength="32" id="first_name" class="form-control" value="<%= @user.first_name %>" placeholder="Please enter your first name" />
                    <small id="error_first_name" class="text-danger"></small>
                  </div>
                </div>
                <br>
                <div class="row">
                  <div class="col-sm-3">
                    <label>Last Name (*)</label>
                  </div>
                  <div class="col-sm-9">
                    <input type="text" maxlength="32" id="last_name"  class="form-control" value="<%= @user.last_name %>" placeholder="Please enter your last name" />
                    <small id="error_last_name" class="text-danger"></small>
                  </div>
                </div>
                <br>
                <div class="row">
                  <div class="col-sm-3">
                    <label>Gender</label>
                  </div>
                  <div class="col-sm-9">
                    <select class="form-control" id="gender">
                      <option value="1" <%= @user.gender ? "selected" : "" %> >Male</option>
                      <option value="0" <%= @user.gender ? "" : "selected" %> >Female</option>
                    </select>
                  </div>
                </div>
                <br>
                <div class="row">
                  <div class="col-sm-3">
                    <label>Date of Birth</label>
                  </div>
                  <div class="col-sm-9">
                    <input class="form-control" type="text" id="birthday" value="<%= @user.date_of_birth ? @user.date_of_birth.to_s(:long) : "" %>"/>
                    <small id="error_birthday" class="text-danger"></small>
                  </div>
                </div>
                <br>
                <div class="row">
                  <div class="col-sm-3">
                    <label>Phone Number (*)</label>
                  </div>
                  <div class="col-sm-9">
                    <input type="text" id="phone_number" maxlength="12" value="<%= @user.phone %>" class="form-control" placeholder="Please enter your phone number" />
                    <small id="error_phone_number" class="text-danger"></small>
                  </div>
                </div>
                <br>
                <div class="row">
                  <div class="col-sm-3">
                    <label>Skype</label>
                  </div>
                  <div class="col-sm-9">
                    <input type="text" id="skype" maxlength="50" class="form-control" value="<%= @user.skype %>" />
                  </div>
                </div>
                <br>
              </div>
            </div>
          </div>
        </div>
        <!-- Modal footer -->
        <div class="modal-footer" style="justify-content: center;">
          <button type="button" class="btn btn-secondary btn-save-edit" id="btn_save_contact" disabled>Save</button>
          <button type="button" class="btn btn-light border-dark cancel-edit-user-profile" data-dismiss="modal">Cancel</button>
        </div>
    </div>
  </div>
</div>
