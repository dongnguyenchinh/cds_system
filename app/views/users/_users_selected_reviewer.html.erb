<table class="table table-primary table-mytable table-responsive-sm"style="width: 100%;border-bottom: 2px solid #4882bf;" id="table_right">
  <thead>
    <tr>
      <td>No.</td>
      <td><input type="checkbox" id="check_all_choose_right" value="all" class="mycontrol"></td>
      <td>Full Name</td>
      <td>Account</td>
      <td style="display:none;">User ID</td>
    </tr>
  </thead>
  <tbody>
    <% if @reviewers.present?%>
      <% @reviewers.each_with_index do |user, index| %>
        <tr id="<%= user.approver_id %>">
          <td><div style="text-align: right;"><%= index + 1%></div></td>
          <td><input type="checkbox" class="mycontrol" id="<%= "#{user.approver_id}_checkbox" %>"> </td>
          <td style="text-align: left"><%= "#{user.approver.format_name}" %> </td>
          <td style="text-align: left"><%= user.approver.account %></td>
          <td style="display:none;"><%= user.approver_id %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
  
