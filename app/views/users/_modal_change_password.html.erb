<!-- The Modal -->
<div class="modal fade modal-form-add-user" id="modal_change_password">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <!-- Modal Header -->
      <div class="modal-header head-myheader">
        <h4 class="modal-title" style="text-align: center">Change Your Password</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <!-- Modal body -->
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row">
            <div class="col-sm-12">
              <p style="color:red">(*) required fields</p>
            </div>
          </div>
          <div class="form-group row">
            <label for="inputPassword" class="col-sm-3 col-form-label">Current Password (*)</label>
            <div class="col-sm-8">
              <div class="input-group mb-3">
                <input type="password" id="old_pass" class="form-control" placeholder="Please enter current password" />
                <div class="input-group-append">
                  <span class="input-group-text">
                      <%= link_to '<i class="far fa-eye icon-list" style="color: blue"></i>'.html_safe, "javascript:void(0)",class: "show-pass", title: "Show password" %>
                      <%= link_to '<i class="fas fa-eye-slash icon-list" style="color: blue"></i>'.html_safe, "javascript:void(0)",class: "d-none hide-pass", title: "Hide password" %>
                  </span>
                </div>
              </div>
              <small id="error_old_pass" class="text-danger"></small>
            </div>
          </div>
          <div class="form-group row">
            <label for="inputPassword" class="col-sm-3 col-form-label">New Password (*)</label>
            <div class="col-sm-8">
              <div class="input-group mb-3">
                <input type="password" id="new_pass"  class="form-control" placeholder="Please enter new password" />
                <div class="input-group-append">
                  <span class="input-group-text">
                      <%= link_to '<i class="far fa-eye icon-list" style="color: blue"></i>'.html_safe, "javascript:void(0)",class: "show-pass", title: "Show password" %>
                      <%= link_to '<i class="fas fa-eye-slash icon-list" style="color: blue"></i>'.html_safe, "javascript:void(0)",class: "d-none hide-pass", title: "Hide password" %>
                  </span>
                </div>
              </div>
              <small id="error_new_pass" class="text-danger"></small>
            </div>
          </div>
          <div class="form-group row">
            <label for="inputPassword" class="col-sm-3 col-form-label">Confirm Password (*)</label>
            <div class="col-sm-8">
              <div class="input-group mb-3">
                <input type="password" id="confirm_pass"  class="form-control" placeholder="Please enter confirm password" />
                <div class="input-group-append">
                  <span class="input-group-text">
                      <%= link_to '<i class="far fa-eye icon-list" style="color: blue"></i>'.html_safe, "javascript:void(0)",class: "show-pass",id: "show_pass", title: "Show password" %>
                      <%= link_to '<i class="fas fa-eye-slash icon-list" style="color: blue"></i>'.html_safe, "javascript:void(0)",class: "d-none hide-pass", title: "Hide password" %>
                  </span>
                </div>
              </div>
              <small id="error_confirm" class="text-danger"></small>
            </div>
          </div>
        </div>
        <input type="hidden" value="<%= @current_user.id %>" id="user_id">
      </div>
      <!-- Modal footer -->
      <div class="modal-footer" style="justify-content: center;">
        <button type="button" class="btn btn-secondary" id="btn_change_password" disabled>Save</button>
        <button type="button" class="btn btn-light border-dark" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
<script>
  var current = "<%= @current_user.password %>"
</script>