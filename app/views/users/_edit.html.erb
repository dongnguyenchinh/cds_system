<!-- The Modal -->
<div class="modal fade modal-form-add-user" id="modalEdit">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <!-- Modal Header -->
      <div class="modal-header head-myheader">
        <h4 class="modal-title" style="text-align: center">Edit User</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <!-- Modal body -->
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row">
            <div class="col-sm-12">
              <p style="color:red">(*) required fields</p>
            </div>
            <div class="col-sm-6">
              <div class="row">
                <div class="col-sm-3">
                  <label>First Name (*)</label>
                </div>
                <div class="col-sm-9">
                  <%= text_field_tag 'first', nil , class: 'form-control', placeholder: 'Please enter first name' %>
                </div>
              </div>
              <br>
              <div class="row">
                <div class="col-sm-3">
                  <label>Last Name (*)</label>
                </div>
                <div class="col-sm-9">
                  <%= text_field_tag 'last', nil, class: 'form-control', placeholder: 'Please enter last name' %>
                </div>
              </div>
              <br>
              <div class="row">
                <div class="col-sm-3">
                  <label>Email (*)</label>
                </div>
                <div class="col-sm-9">
                  <%= text_field_tag 'email', nil, class: 'form-control', placeholder: 'Please enter email' %>
                </div>
              </div>
              <br>
              <div class="row">
                <div class="col-sm-3">
                  <label>Account (*)</label>
                </div>
                <div class="col-sm-9">
                  <%= text_field_tag 'account', nil, class: 'form-control', placeholder: 'Please enter account' %>
                </div>
              </div>
              <br>
            </div>
            <div class="col-sm-6">
              <div class="row">
                <div class="col-sm-3">
                  <label>Role (*)</label>
                </div>
                <div class="col-sm-9">
                  <%= select_tag "role", nil, class: 'form-control', include_blank: "Select a role" %>
                </div>
              </div>
              <br>
              <div class="row">
                <div class="col-sm-3">
                  <label>Company (*)</label>
                </div>
                <div class="col-sm-9">
                  <%= select_tag "company", nil, class: 'form-control modal-edit-user-management ',  include_blank: "Select a company" %>
                </div>
              </div>
              <br>
              <div class="row">
                <div class="col-sm-3">
                  <label>Project</label>
                </div>
                <div class="col-sm-9 edit-projects">
                  <%= select_tag 'project', nil, class: "tokenize-project", multiple: true %>
                </div>
              </div>
              <br>
              <div class="row">
                <div class="col-sm-3">
                  <label>Joined Date</label>
                </div>
                <div class="col-sm-9">
                  <input type="text" id="joined_date"  class="form-control joined-date">
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-5">
              <%= hidden_field(:user, :id) %>
            </div>
            <div class="col-sm-2">
            </div>
          </div>
        </div>
        <%# end container  %>
      </div>
      <!-- Modal footer -->
      <div class="modal-footer" style="justify-content: center;">
        <button type="button" class="btn btn-primary" id="btn_modal_edit_user">Save</button>
        <button type="button" class="btn btn-light border-dark" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
